# This is a template Makefile generated by rpcgen

# Parameters

CLIENT = msg_client
SERVER = msg_server

SOURCES_CLNT.c = msg_client.c msg_clnt.c
SOURCES_CLNT.h =
SOURCES_SVC.c = msg_server.c msg_svc.c
SOURCES_SVC.h =
SOURCES.x = msg.x

TARGETS_SVC.c =
TARGETS_CLNT.c =
TARGETS = msg_server msg_client

OBJECTS_CLNT = $(SOURCES_CLNT.c:%.c=%.o) $(TARGETS_CLNT.c:%.c=%.o)
OBJECTS_SVC = $(SOURCES_SVC.c:%.c=%.o) $(TARGETS_SVC.c:%.c=%.o)

STUBS = msg_clnt.c msg_svc.c msg.h

# Compiler flags

CFLAGS += -g -I/usr/include/ntirpc
LDLIBS += -lnsl -l ntirpc
RPCGENFLAGS =

# Targets

all : $(CLIENT) $(SERVER)

$(TARGETS) : $(SOURCES.x)
	rpcgen $(RPCGENFLAGS) $(SOURCES.x)

$(OBJECTS_CLNT) : $(SOURCES_CLNT.c) $(SOURCES_CLNT.h) $(TARGETS_CLNT.c)

$(OBJECTS_SVC) : $(SOURCES_SVC.c) $(SOURCES_SVC.h) $(TARGETS_SVC.c)

$(CLIENT) : $(OBJECTS_CLNT)
	$(LINK.c) -o $(CLIENT) $(OBJECTS_CLNT) $(LDLIBS)

$(SERVER) : $(OBJECTS_SVC)
	$(LINK.c) -o $(SERVER) $(OBJECTS_SVC) $(LDLIBS)

msg_clnt.c: $(SOURCES.x)
	rpcgen $(RPCGENFLAGS) $(SOURCES.x)

clean:
	 $(RM) core $(TARGETS) $(OBJECTS_CLNT) $(OBJECTS_SVC) $(CLIENT) $(SERVER) $(STUBS) *~
